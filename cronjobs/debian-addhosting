#!/usr/bin/perl
# Run me from cron as
#  perl -I/path/to/kirin debian-addhosting
use strict;
use warnings;
do 'kirin.pl';

for my $job (Kirin::DB::JobQueue->search(plugin => "domain")) {
    if ($job->method eq "add_hosting") {
        my ($user) = $job->customer->find_user;
        add_hosting($job->parameters, $user);
        $job->delete;
    }
}

sub add_hosting {
    my $domain = Kirin::DB::Domain->retrieve(shift); return unless $domain;
    my $user   = shift;                              return unless $user;
    my $dn     = $domain->domainname;
    my $user_ent = pwent($user->username);

    # Ensure home dir
    if (!$user_ent) { die "User ".$user->username." isn't set up yet" }
    if (!-d  $user_ent->dir) { die "User ".$user->username." doesn't have a home directory" }

    # Create hostings for www.$domain and $domain
    Kirin::Plugin::Webhosting->_add_todo({customer => $user->customer}, create => $dn);
    Kirin::Plugin::Webhosting->_add_todo({customer => $user->customer}, create => "www.$dn");

    # Email hosting
    open EMAIL, ">/etc/exim4/virtual/$dn" or die $!;
    print EMAIL "*: ".$user->customer->email."\n";
    close EMAIL;
}
